- max = 50

%table{style: 'width:100%'}
  %colgroup
    %col{style: 'width: 2em'}
    %col{style: 'width: 5em'}
    %col{style: 'width: 5em'}
    %col{style: 'width: 10em'}
    %col{style: 'width: 10em'}
    %col{style: ''}
  %thead
    %tr
      %th
        ID
      %th
        Amount
      %th
        Date
      %th
        From
      %th
        To
      %th
        Details
  %tbody
    - if since
      %tr
        %td{colspan: 6, style: 'text-align:center'}
          %a{href: '/gl'} Show most recent transactions
      %tr
        %td{colspan: 6, style: 'text-align:center'}
          = 'Since ' + since.utc.iso8601
    - txns = gl.fetch(since: since, limit: max)
    - if txns.empty?
      %tr
        %td{colspan: 6, style: 'text-align:center'}
          No transactions as of yet.
    - else
      - txns.each do |t|
        - @last = t[:date]
        %tr
          %td
            = t[:id]
          %td{style: 'text-align:right'}
            = t[:amount].to_zld
          %td
            = Zold::Age.new(t[:date])
          %td
            %code
              %a{href: "http://www.zold.io/ledger.html?wallet=#{t[:source]}"}= t[:source]
          %td
            %code
              %a{href: "http://www.zold.io/ledger.html?wallet=#{t[:target]}"}= t[:target]
          %td
            = t[:details]
      - if @last && txns.count == max
        %tr
          %td{colspan: 5, style: 'text-align:center'}
            %a{href: '?since=' + @last.utc.iso8601} Show more
